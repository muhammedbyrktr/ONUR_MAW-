@model SinavOtomasyonuProjesi.Models.Hocalar
@using System.Data.Entity
@using System.Linq
@{
    ViewBag.Title = "Profilim";
}


      
            <div class="row">
                <div class="col-sm-8">
                  
                    <form id="contact-form" action="#" method="post" style=" width: 440px;padding: 20px; position: relative;margin: auto;margin-bottom: 20px;
    box-shadow: 0 0 10px 2px #1c3564;border-radius: 0 26px;overflow: hidden;background: #afe3c7;">
                        <div class="contact-line">
                            <button class="obligation-button" type="button" style=" width: 200px;height: 26px;line-height: 20px;
    position: relative;float:initial;font-size: 12px; top: 0;text-align: center;border-radius: 0 8px;
    background: #0d6636;cursor: pointer;color: white;outline: none;">
                                <span>PROFİLİM</span>
                            </button>
                        </div>
                        <form id="contact-form" action="#" method="post" style=" width: 440px;padding: 40px;right:25px; position: relative;margin: auto;margin-bottom: 20px;
    box-shadow: 0 0 10px 2px #1c3564;border-radius: 0 26px;overflow: hidden;background-color:whitesmoke">
                            @Html.AntiForgeryToken()
                            @using (Html.BeginForm())
                            {
                               
                                <div class="form-group ">
                                    <div style="margin-bottom: 25px;" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        <div>
                                            @Html.LabelFor(m => m.HocaAdı)
                                            @Html.Label(Model.HocaAdı, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group ">
                                    <div style="margin-bottom: 25px;" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        <div>
                                            @Html.LabelFor(m => m.HocaSoyadı)
                                            @Html.Label(Model.HocaSoyadı, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group ">
                                    <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <div>
                                            @Html.LabelFor(m => m.Şifresi)
                                            @Html.Label(Model.Şifresi, new { @class = "form-control" })
                                        </div>
                                    </div>

                                </div>


                                <div class="form-group ">
                                    <div style="margin-bottom: 25px;" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-education"></i></span>
                                        <div>
                                            @Html.LabelFor(m => m.Ünvanı)
                                            @Html.Label(Model.Ünvanı, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group ">
                                    <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                                        @Html.LabelFor(m => m.Email)
                                        <div>
                                            @Html.LabelForModel(Model.Email, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>

                                <div style="margin-top:10px" class="form-group">
                                </div>
                                <h5>@ViewBag.message</h5>
                            }

                        </form>
                    </form>

                </div>
                <div class="col-sm-4">
                    @Html.Partial("PartialKullanici")

                </div>
            </div>

