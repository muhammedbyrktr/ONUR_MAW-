@model SinavOtomasyonuProjesi.ViewModels.AuthLogin
@using System.Data.Entity
@using System.Linq
@{
    ViewBag.Title = "Login Page";
}

<body>
  
    <form id="contact-form" action="#" method="post" style=" width: 440px;padding: 30px;right:25px; position: relative;margin: auto;margin-bottom: 20px;
    box-shadow: 0 0 10px 2px #1c3564;border-radius: 0 26px;overflow: hidden;background-color:whitesmoke">
        @*@ViewBag.message*@
        @using (Html.BeginForm())
        {
            <h5>@ViewBag.message</h5>
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="form-group ">
                <div style="margin-bottom: 25px;" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <div>
                     
                        @Html.TextBoxFor(m => m.HocaAdı, new { @class = "form-control", required = "required", @placeholder = "HocaAdı" })
                    </div>
                </div>
            </div>

            <div class="form-group ">
                <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <div>
                      
                        @Html.PasswordFor(m => m.Şifresi, new { @class = "form-control", required = "required", placeholder = "Şifre" })
                    </div>
                </div>

            </div>
            <div class="no-margin">
                @Html.LabelFor(m => m.BeniHatırla)

                @if (@ViewBag.remember == true)
                {@Html.CheckBoxFor(m => m.BeniHatırla, new { @checked = "checked" })}
                else
                {@Html.CheckBoxFor(m => m.BeniHatırla)}

            </div>
            <div style="margin-top:10px" class="form-group">

            </div>
   

    <button type="submit" class="btn btn-sm  btn-primary">Giriş Yap</button>

    <a href="@Url.Action("CreateUser")" class="btn btn-sm  btn-primary"><i class="glyphicon glyphicon-plus"></i>Kaydol</a><br><br>
    <a href="@Url.Action("SifremiUnuttum")">Şifremi Unuttum</a>


        }
      
    </form>
</body>

