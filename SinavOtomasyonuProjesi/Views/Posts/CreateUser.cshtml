@model SinavOtomasyonuProjesi.ViewModels.CreateUser
@using System.Data.Entity
@using System.Linq
@{
    ViewBag.Title = "Create User";
}
    <body>
        
            <form id="contact-form" action="#" method="post" style=" width: 440px;padding: 40px;right:25px; position: relative;margin: auto;margin-bottom: 20px;
    box-shadow: 0 0 10px 2px #1c3564;border-radius: 0 26px;overflow: hidden;background-color:whitesmoke">
            
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                  
                    <div class="form-group ">
                        <div style="margin-bottom: 25px;" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <div>

                                @Html.TextBoxFor(m => m.HocaAdı, new { @class = "form-control", required = "required", @placeholder = "Adı" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div style="margin-bottom: 25px;" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <div>

                                @Html.TextBoxFor(m => m.HocaSoyadı, new { @class = "form-control", required = "required", @placeholder = "Soyadı" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                            <div>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", required = "required", placeholder = "Email@example.com" })  
                            </div>  
                        </div>  <h5>@ViewBag.message</h5>
                    </div>
                  
                    <div class="form-group ">
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <div>

                                @Html.PasswordFor(m => m.Şifresi, new { @class = "form-control", required = "required", placeholder = "Şifre", id = "password" })
                            </div>
                        </div>

                    </div>
                    <div class="form-group ">
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <div>

                                @Html.PasswordFor(m => m.ŞifreTekrar, new { @class = "form-control", required = "required", placeholder = "Şifre Tekrar", id = "confirm_password" })
                            </div>
                        </div>

                    </div>
                    <div class="form-group ">
                        <div style="margin-bottom: 25px;" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <div>

                                @Html.TextBoxFor(m => m.Ünvanı, new { @class = "form-control", required = "required", @placeholder = "Ünvan" })
                            </div>
                        </div>
                    </div>

                    <div style="margin-top:10px" class="form-group">
                        @Html.ValidationSummary()
                    </div>
    <a href="@Url.Action("Index")" class="btn btn-primary btn-sm"><i class="glyphicon glyphicon-arrow-left"></i>  Giriş Yap</a>
    <button type="submit" class="btn btn-primary btn-sm "><i class="glyphicon glyphicon-plus"></i>  Kaydet</button><br>
                }
            </form>

            @section Scripts {
                <script>
                    var password = document.getElementById("password"),
                    confirm_password = document.getElementById("confirm_password");

                    function validatePassword() {
                        if (password.value != confirm_password.value) {
                            confirm_password.setCustomValidity("Şifreler Aynı Değil");
                        }
                        else {
                            confirm_password.setCustomValidity('');
                        }
                    }

                    password.onchange = validatePassword;
                    confirm_password.onkeyup = validatePassword;
                </script>
            }  
</body>




